    <!-- COMPILE -->
    <target name="compile" description="compile the production">
        <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant"
                 classpath="lib/ant-javafx.jar"/>
                 
        <!-- COPY FXML FILES TO BUILD DIRECTORY -->
        <copy todir="${build.dir}/production/FXML_src">
            <fileset dir="${src.dir}/FXML_src"/>
        </copy>

        <!-- COPY IMAGES TO BUILD DIRECTORY -->
        <copy todir="${build.dir}/production/images">
            <fileset dir="${src.dir}/images"/>
        </copy>

        <!-- COMPILE APPLICATION -->
        <javac includeantruntime="false"
               srcdir="${src.dir}"
               destdir="${build.dir}"
               fork="yes"
               executable="javac"
               source="1.8"
